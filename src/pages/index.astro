---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="full-screen-section">
    <div class="opening-section">
      <div class="hero-section">
        <div class="logo-section">
          <h1>GEO<br/>BUD</h1>
          <p>Kompleksowe usługi budowlane</p>
          <div class="logo-symbol"></div>
        </div>
      </div>

      <div class="services-grid">
        <div class="service-card waterworks">
          <div class="overlay"></div>
          <h2>Wodociągi</h2>
        </div>
        <div class="service-card geodesy">
          <div class="overlay"></div>
          <h2>Geodezja</h2>
        </div>
      </div>
    </div>

    <div class="contact-section">
      <h3>SKONTAKTUJ SIĘ</h3>
      <div class="contact-info">
        <a href="tel:321456987" class="phone">321 456 987</a>
        <a href="mailto:geobud@gmail.com" class="email">geobud@gmail.com</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .full-screen-section {
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .opening-section {
    flex: 1;
    display: flex;
    flex-direction: row;
    overflow: hidden;
  }

  .hero-section {
    flex: 1;
    padding: 4rem 2rem;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-section {
    max-width: 400px;
    text-align: center;
  }

  h1 {
    font-size: 6.5rem;
    font-weight: 300;
    line-height: 1;
    margin: 0;
    letter-spacing: 0.1em;
  }

  .logo-section p {
    color: #666;
    font-size: 1.5rem;
    margin-top: 1rem;
  }

  .logo-symbol {
    width: 150px;
    height: 150px;
    background-image: url('/LOGO.png');
    background-size: contain;
    background-repeat: no-repeat;
    margin-top: 2rem;
    justify-self: center;
    align-self: center;
  }

  .services-grid {
    flex: 2;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    width: 100%;
    height: 100%;
  }

  .service-card {
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: 2rem;
    color: white;
    background-size: cover;
    background-position: center;
    min-height: 100%;
  }

  .service-card .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
  }

  .waterworks {
    background-image: url('/Pipes.png');
    background-size: auto;
  }

  .geodesy {
    background-image: url('/Geo.png');
    background-size: auto;
  }

  .service-card h2 {
    position: relative;
    margin: 0;
    font-size: 2rem;
    font-weight: 300;
    z-index: 1;
  }

  .contact-section {
    background: #2f3c7e;
    color: white;
    padding: 1.5rem 2rem;
    flex-shrink: 0;
  }

  .contact-section h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 400;
  }

  .contact-info {
    display: flex;
    gap: 2rem;
    margin-top: 1rem;
  }

  .contact-info a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .opening-section {
      flex-direction: column;
    }

    .services-grid {
      grid-template-columns: 1fr;
      height: auto;
    }

    .service-card {
      height: 200px;
    }

    .contact-info {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

