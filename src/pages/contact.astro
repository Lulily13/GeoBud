  </div>

  <style>
    .contact-page {
      display: flex;
      min-height: 100vh;
      font-family: sans-serif;
    }

    .contact-left {
      background-color: #cc6833;
      color: white;
      flex: 1;
      padding: 4rem 3rem;
    }

    .contact-left h1 {
      font-size: 3rem;
      margin-bottom: 2rem;
    }

    .contact-details {
      list-style: none;
      padding: 0;
    }

    .contact-details li {
      font-size: 1.2rem;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
    }

    .icon {
      display: inline-block;
      width: 1.5rem;
      margin-right: 0.5rem;
      font-size: 1.4rem;
    }

    .contact-right {
      flex: 1;
      background-color: white;
      padding: 4rem 3rem;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .contact-form {
      width: 100%;
      max-width: 500px;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .contact-form h2 {
      font-size: 1.5rem;
      text-align: center;
      color: #444;
      margin-bottom: 1rem;
    }

    .contact-form label {
      display: flex;
      flex-direction: column;
      font-size: 0.95rem;
      color: #333;
    }

    .contact-form input,
    .contact-form select,
    .contact-form textarea {
      padding: 0.75rem;
      border: 1px solid #aaa;
      border-radius: 4px;
      font-size: 1rem;
    }

    .contact-form button {
      align-self: flex-end;
      background-color: #cc6833;
      color: white;
      padding: 0.6rem 1.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
    }

    .contact-form button:hover {
      background-color: #b3552a;
    }

    @media (max-width: 768px) {
      .contact-page {
        flex-direction: column;
      }

      .contact-left,
      .contact-right {
        flex: none;
        width: 100%;
        padding: 2rem;
      }

      .contact-form {
        max-width: 100%;
      }
    }
  </style>
</Layout>
